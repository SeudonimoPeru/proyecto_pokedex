<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <layer-list>
            <item android:top="1dp" android:right="2dp" android:left="2dp">
                <shape>
                    <corners android:radius="8dp" />
                    <solid android:color="@color/gray_shadow_button" />
                </shape>
            </item>
            <item android:bottom="3dp" android:top="2dp" android:right="3dp" android:left="3dp">

                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/gray_border_button_disabled" />
        </shape>
    </item>

</selector>