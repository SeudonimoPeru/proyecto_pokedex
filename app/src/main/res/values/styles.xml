<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonGreen" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/selector_button_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14.7sp</item>
    </style>

    <style name="ButtonWhite" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_btn_white_bordered_when_disabled</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@drawable/selector_textcolor_button_low_contrast</item>
        <item name="android:textSize">14.7sp</item>
    </style>

    <style name="ButtonRed" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_button_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@drawable/selector_textcolor_button_high_contrast</item>
        <item name="android:textSize">14.7sp</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>