<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.PTER" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">#E31834</item>
		<item name="colorPrimaryVariant">#A9000E</item>
		<item name="colorOnPrimary">#FFFFFF</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">#38454F</item>
		<item name="colorSecondaryVariant">#63707B</item>
		<item name="colorOnSecondary">#111E27</item>
		<item name="materialButtonStyle">@style/Theme.MateriaButton</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Vts.Widget.CardFormLayout" parent="Widget.MaterialComponents.CardView">
		<item name="cardCornerRadius">5dp</item>
		<item name="cardElevation">10dp</item>
	</style>

	<style name="Vts.Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"/>

	<style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="android:windowBackground">@drawable/dialog_background</item>
	</style>

	<style name="Theme.MateriaButton" parent="Widget.MaterialComponents.Button">

		<item name="cornerRadius">8dp</item>
		<item name="android:letterSpacing">0</item>
		<item name="android:textSize">18sp</item>


	</style>

</resources>